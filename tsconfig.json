{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es6"],
      "skipLibCheck": true,
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "types": [
        "react",
        "react-native",
        "jest"
      ],
      "typeRoots": [ "../node_modules/@types" ]
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }
  